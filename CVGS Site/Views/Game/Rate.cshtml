@model CVGS_Site.Models.Game
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }
@{ ViewData["Title"] = "Games Rating"; }
<h1>Rate @Html.DisplayFor(model => model.EnglishName)</h1>

<div>
    <hr />
    <dl class="row">
        <!--
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnglishName)
        </dd>
        -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnglishDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
<h4>Rate This Game</h4>
<hr />
<p>Please rate this game on a score of 0 to 100. 100 being a perfect score and 0 being
    being a terrible score indicating this game has no redeeming qualities whatsoever.</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
