@using Microsoft.AspNetCore.Http;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

@model CVGS_Site.Models.CreditCardRecord

@{ ViewData["Title"] = "Edit"; }

<h1>Edit Card Info</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CardId" />
            <div hidden class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div><img src="~/images/card companies.png" alt="card company logo" width="200" />
            <div class="form-group">
                <label asp-for="ExpiryDateMonth" class="control-label">Expiry Month</label>
                <input asp-for="ExpiryDateMonth" class="form-control" />
                <span asp-validation-for="ExpiryDateMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDateYear" class="control-label">Expiry Year</label>
                <input asp-for="ExpiryDateYear" class="form-control" />
                <span asp-validation-for="ExpiryDateYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvv" class="control-label">CVV</label>
                <input asp-for="Cvv" class="form-control" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="float: left; width: 10em; margin-bottom:1em;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" style="float: left; width: 10em;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
