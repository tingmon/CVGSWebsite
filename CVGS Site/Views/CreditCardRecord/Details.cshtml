@using Microsoft.AspNetCore.Http;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

@model CVGS_Site.Models.CreditCardRecord

@{ ViewData["Title"] = "Details"; }

<h1>Card Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Card Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt class="col-sm-2">
            Expiry Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpiryDateMonth)/@Html.DisplayFor(model => model.ExpiryDateYear)
        </dd>
        <dt class="col-sm-2">
            CVV
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cvv)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CardId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
