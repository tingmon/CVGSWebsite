@using Microsoft.AspNetCore.Http;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

@model CVGS_Site.Models.CreditCardRecord

@{ ViewData["Title"] = "Delete"; }

<h1>Remove Card</h1>

<h3>Are you sure you want to remove this card?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Card Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt class="col-sm-2">
            Expiry Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpiryDateMonth)/@Html.DisplayFor(model => model.ExpiryDateYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cvv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cvv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CardId" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
